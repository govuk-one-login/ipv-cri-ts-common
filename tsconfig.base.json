{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "incremental": true,

    // additional files to output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "exactOptionalPropertyTypes": true, // differentiates between { blah?: string } (key either exists with string value or is not present at all) and { blah: string | undefined } (key always exists but value could be undefined)
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,

    // monorepo
    "composite": true
  }
}
